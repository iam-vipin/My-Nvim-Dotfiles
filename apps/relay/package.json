{
  "name": "relay",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "description": "WebSocket relay service for horizontal scaling with Redis pub/sub",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./consumer": "./dist/consumer.mjs",
    "./package.json": "./package.json"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && tsdown",
    "dev": "tsdown --watch --onSuccess \"node --env-file=.env .\"",
    "dev:consumer": "tsdown --watch --onSuccess \"node --env-file=.env ./dist/consumer.mjs\"",
    "start": "node --env-file=.env .",
    "check:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/",
    "check:types": "tsc --noEmit",
    "check:format": "prettier . --cache --check",
    "fix:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/ --fix",
    "fix:format": "prettier . --cache --write",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "author": "Plane Software Inc.",
  "dependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@effect/platform": "0.94.0",
    "@effect/platform-node": "0.104.0",
    "@plane/logger": "workspace:*",
    "@socket.io/redis-adapter": "8.3.0",
    "@socket.io/redis-emitter": "5.1.0",
    "amqplib": "0.10.5",
    "axios": "catalog:",
    "effect": "3.19.14",
    "ioredis": "5.7.0",
    "socket.io": "4.8.1"
  },
  "devDependencies": {
    "@plane/typescript-config": "workspace:*",
    "@types/amqplib": "0.10.5",
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
